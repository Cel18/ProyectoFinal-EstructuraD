        <Label style="-fx-font-weight: bold;" text="Autor:" />
        <TextField fx:id="txtAutor" editable="false" maxWidth="515.0" prefHeight="25.0" prefWidth="515.0" promptText="Autor (automÃ¡tico)" />

    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnPublicar" onAction="#publicarContenido" prefWidth="120" style="-fx-background-color: #24789C; -fx-text-fill: white;" text="Publicar" />
    </HBox>

</VBox>
