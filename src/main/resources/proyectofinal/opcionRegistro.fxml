<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="252.0" prefWidth="275.0" spacing="20" style="-fx-background-color: #d8efe9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectofinal.Controladores.OpcionRegistroController">

    <padding>
        <Insets bottom="40" left="30" right="30" top="40" />
    </padding>

    <HBox alignment="TOP_LEFT" prefHeight="24.0" prefWidth="20.0">
        <Button fx:id="btnVolver" onAction="#handleVolver" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Imagenes/volver.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <Button maxWidth="250" onAction="#handleRegistroEstudiante" prefHeight="42.0" prefWidth="181.0" style="-fx-background-color: #24789c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Registrarse como Estudiante">
      <font>
         <Font size="14.0" />
      </font></Button>

    <Button maxWidth="250" onAction="#handleRegistroModerador" prefHeight="42.0" prefWidth="181.0" style="-fx-background-color: #24789c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Registrarse como Moderador">
      <font>
         <Font size="14.0" />
      </font></Button>

</VBox>
